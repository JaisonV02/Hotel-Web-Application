<!-- Flash  messages -->
<!-- Display flash messages -->
<% if (messages.success) { %>
  <div class="alert alert-success">
      <%= messages.success %>
  </div>
<% } %>
<% if (messages.warning) { %>
  <div class="alert alert-warning">
